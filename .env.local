# .env.local
# Local development environment configuration

# API Settings
APP_ENV=local
PROJECT_NAME="FastAPI Boilerplate (Local)"
SECRET_KEY="local-development-secret-key-change-in-production"
SWAGGER_UI_ENABLED=true
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# Database Settings
DATABASE_TYPE=postgres
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app
POSTGRES_PORT=5432

# Oracle Settings (if needed)
ORACLE_SERVER=localhost
ORACLE_USER=oracle
ORACLE_PASSWORD=oracle
ORACLE_DB=app
ORACLE_PORT=1521

# Redis Settings
REDIS_SERVER=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO Settings
MINIO_SERVER=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=app-bucket

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Rate Limit Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Cache Settings
CACHE_ENABLED=true
CACHE_EXPIRE_SECONDS=300  # 5 minutes

# Logging
LOG_LEVEL=DEBUG
SENTRY_DSN=
