# Core settings
APP_ENV=prod
API_V1_STR=/api/v1
# Generate a strong secret key for production using: openssl rand -hex 32
SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# CORS settings (comma-separated list)
BACKEND_CORS_ORIGINS=https://yourdomain.com

# Database settings
DATABASE_TYPE=postgres

# PostgreSQL settings
POSTGRES_SERVER=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=app
POSTGRES_PORT=5432

# Oracle settings (if needed)
ORACLE_SERVER=oracle
ORACLE_USER=system
ORACLE_PASSWORD=
ORACLE_SERVICE=xe
ORACLE_PORT=1521

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache settings
CACHE_EXPIRATION_SECONDS=300  # 5 minutes

# MinIO settings
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=media
MINIO_SECURE=true

# API settings
DISABLE_DOCS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_SECOND=5

# Logging
LOG_LEVEL=INFO